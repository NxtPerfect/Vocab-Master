@use 'sass:color';

$text: #ebf8f7;
$background: #030a09;
$primary: #98dcdb;
$secondary: #2c3882;
$accent: #6a55c6;
$border-radius: 2svh;

@mixin betterButton($width, $height, $bg, $color, $bg-alt, $color-alt) {
  width: $width;
  height: $height;
  background-color: $bg;
  color: $color;
  border-radius: 100vw;
  border: 0;

  &:focus,
  &:hover {
    background-color: $bg-alt;
    color: $color-alt;
    transition: color 0.1s linear, background-color 0.1s linear;
    cursor: pointer;
  }

  &:active::before {
    background-color: color.scale($bg-alt, $lightness: 20%);
    color: color.scale($color-alt, $lightness: 20%);
    transition: color 0.1s ease-in-out, background-color 0.1s ease-in-out;
  }
}

* {
  min-width: 0;
  margin: .25svh .5svw;
  background-color: $background;
  color: $text;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

:root {
  display: flex;
  flex-direction: column;
}

main {
  display: grid;
  grid-template-columns: 1fr 1fr;
  justify-items: center;
  align-content: center;

  .language_section {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
    background-color: $secondary;
    padding: 2.5svh .5svw;
    border-radius: $border-radius;

    .language_section_top {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      background-color: $secondary;

      h1 {
        text-transform: capitalize;
        background-color: $secondary;
      }

      button {
        @include betterButton(8rem, 2rem, $primary, $background, $accent, $text)
      }
    }

    .link {
      color: $primary;
      background: $secondary;

      &:hover,
      &:focus {
        cursor: pointer;
        color: $accent;
        transition: color 0.1s linear;
      }
    }
  }

}
